package blackjack;

class Blackjack 
{
    public static void main(String args[])
    {
	Deck deck1 = new Deck();
	Hand hand1 = new Hand();
	deck1.initDeck();
	deck1.shuffle();
	hand1.addCard(deck1.dealCard());
	hand1.addCard(deck1.dealCard());
	System.out.println(hand1.toString());
	System.out.println("Blackjack? " + hand1.isBlackjack());
	System.out.println("Bust? " + hand1.isBust());	
	hand1.addCard(deck1.dealCard());
	System.out.println(hand1.toString());
	System.out.println("Blackjack? " + hand1.isBlackjack());
	System.out.println("Bust? " + hand1.isBust());
    }
}
